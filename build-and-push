#!/bin/bash

set -eu

files=(*/Dockerfile)

echo_exec() (
  echo "$@"
  exec "$@"
)

build-and-push() (
  image=$(dirname $1)
  cd "$image"

  tag="wint/$image:latest"

  if [[ ",$SKIP_CACHE," = *",$image,"* ]] || [[ "$SKIP_CACHE" = "all" ]]; then
    nocache_opts=()
  else
    nocache_opts=(--no-cache)
  fi

  printf '\n\n\n\n>>>>>>>>>>>>>>>>>>>>>>>>>> building and pushing %s <<<<<<<<<<<<<<<<<<<<<<<<<<\n' "$tag"
  echo_exec docker buildx build \
    --pull \
    --push \
    "--cache-from=type=gha,scope=$image,url_v2=$ACTIONS_RESULTS_URL,token=$ACTIONS_RUNTIME_TOKEN" \
    "--cache-to=type=gha,mode=max,scope=$image,url_v2=$ACTIONS_RESULTS_URL,token=$ACTIONS_RUNTIME_TOKEN" \
    "${nocache_opts[@]}" \
    --platform linux/amd64,linux/arm64 \
    --sbom=false --provenance=false \
    -t "$tag" \
    .
)

for f in "${files[@]}"; do
  build-and-push "$f"
done
